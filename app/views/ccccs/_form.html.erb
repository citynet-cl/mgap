<%= form_for(@cccc, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @cccc.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@cccc.errors.count, "error") %> prohibited this cccc from being saved:</h4>

      <ul>
      <% @cccc.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :nombre, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :algo, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :algo, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :hm, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.check_box :hm, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nacimiento, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.date_select :nacimiento, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :edad, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.number_field :edad, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
