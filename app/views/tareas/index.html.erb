
<div class="page-header">
  <%= link_to new_tarea_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva Tarea
  <% end %>
  <h1>Listado de tareas</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
            <th>Proyecto</th>
            <th>HH</th>
            <th>Fecha</th>
	    <th>Acciones</th>
	    <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tareas) do |tarea| %>
            <td><%= tarea.nombre %></td>
            <td><%= tarea.proyecto.nombre %></td>
            <td><%= tarea.hh %></td>
            <td><%= tarea.fecha_registro %></td>
	    <td><%= detalles_link tarea %></td>
	    <td><%= delete_link tarea_path(tarea) %></td>
      <% end %>
    </tbody>
  </table>
</div>
