
<%= javascript_include_tag params[:controller] %>

<div class="page-header">
	<%= link_to new_tarea_path, "data-no-turbolink" => true,  :class => 'btn btn-primary btn-lg' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva Tarea
  <% end %>
  <h1>Listado de tareas</h1>
</div>


<div class="table-responsive">
  <table class="table table-striped table-hover" id="tareas_usuario">
    <thead>
      <tr>
	    <th>Fecha Registro</th>
	    <th>Cliente</th>
	    <th>Nombre Tarea</th>
	    <th>Proyecto</th>
	    <th>Modulo</th>
	    <th>Otro</th>
	    <th>HH</th>
	    <th>Acciones</th>
	    <th></th>
	    <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tareas) do |tarea| %>
            <td><%= tarea.fecha_registro %></td>
	      <td><%= tarea.cliente.nombre.humanize %></td>
	      <td><%= truncate(tarea.nombre, length: 20) %></td>
	      <% if tarea.proyecto.blank? and tarea.otro.blank? %>
		      <td></td>
		      <td><%= tarea.modulo.nombre.humanize %></td>
		      <td></td>
	      <% elsif tarea.proyecto.blank? and tarea.modulo.blank? %>
			      <td></td>
		      	      <td></td>
			      <td><%= tarea.otro.nombre.humanize %></td>
	      <% else %>
		      <td><%= tarea.proyecto.nombre.humanize %></td>
	              <td></td>
	              <td></td>
	      <% end  %>
            <td><%= tarea.hh %></td>
	    <td><%= link_to "Copiar",{} , class: "btn btn-success btn-sm" %> </td>
	    <td><%= detalles_link tarea %></td>
	    <td><%= delete_link tarea_path(tarea) %></td>
      <% end %>
    </tbody>
  </table>
</div>

