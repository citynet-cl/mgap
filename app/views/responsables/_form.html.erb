<%= simple_form_for([@cliente, @responsable], :html => { :class => "form-horizontal" }) do |f| %>
  <% if @responsable.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4>No se pudo registrar esta Persona porque se encontr√≥ <%= @responsable.errors.count %>
	      <% if @responsable.errors.count==1 %> 
		      <%= render text: "error" %>
	      <% else  %>
		      <%= render text: "errores" %>
	      <% end %>
      </h4>

      <ul>
      <% @responsable.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :nombre, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :nombre, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.email_field :email, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fono, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.telephone_field :fono, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
	    <%= f.submit :class => "btn btn-primary", :value => "Guardar Responsable" %>
    </div>
  </div>
<% end %>
