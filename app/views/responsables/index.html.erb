<div class="page-header">
  <%= link_to new_responsable_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Responsable
  <% end %>
  <h1>Listing responsables</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Fono</th>
            <th>Lugar</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @responsables) do |responsable| %>
            <td><%= responsable.nombre %></td>
            <td><%= responsable.email %></td>
            <td><%= responsable.fono %></td>
            <td><%= responsable.lugar %></td>
            <td><%= link_to 'Show', responsable %></td>
        <td><%= link_to 'Edit', edit_responsable_path(responsable) %></td>
        <td><%= link_to 'Destroy', responsable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
