<!DOCTYPE html>
<html>
<head>
<title>MgapUser</title>
<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
<% if mobile_device? %>
	<%= stylesheet_link_tag    "jquery.mobile-1.3.2" , media: "all", "data-turbolinks-track" => true %>
  	<%= javascript_include_tag "jquery.mobile-1.3.2" %>
<% end %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class='<%= controller.controller_name %>'>

<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
	<div class="navbar-header">
		<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>
		<%= link_to "Inicio", root_path, class: "navbar-brand" %>
	</div>

	<div class="collapse navbar-collapse navbar-ex1-collapse">
		<ul class="nav navbar-nav">
			<% if current_user %>
				<% unless current_user.has_role? :admin %>
					<li><%= link_to "Tareas", tareas_path, "data-no-turbolink" => true %></li>
					<li><%= link_to "Clientes", clientes_path %></li>
					<% if mobile_device? %>
						<li><!--%= link_to "Full", :mobile => 0 %--></li>
					<% else %>
						<li><!--%= link_to "Movil", :mobile => 1 %--></li>
						
					<% end %>
				<%  end %>

				<% if current_user.has_role? :admin %>
					<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">Proyectos<b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><%= link_to "Proyectos en Curso", proyectos_path %></li>
						<li><%= link_to "Proyectos Cerrados", proyectos_cerrados_path, "data-no-turbolink" => true  %></li>
					</ul>
					</li>

						<li><%= link_to "Listados", listados1_path, "data-no-turbolink" => true  %></li>

					<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">Reportes<b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><%= link_to "Fecha Registro vs Fecha Creacion", listados2_path  %></li>
					</ul>
					</li>

					<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">Graficos<b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><%= link_to "Segun Desarrollador", graficos1_path %></li>
						<li><%= link_to "Segun Proyecto", graficos2_path %></li>
					</ul>
					</li>

					<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">Administracion<b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><%= link_to "Usuarios", users_path %></li>
						<li><%= link_to "Clientes", clientes_path %></li>
						<li><%= link_to "Tipos Tareas", tipo_tareas_path %></li>
					</ul>
					</li>
				<% end %>
		</ul>

		<ul class="nav navbar-nav navbar-right">
			<li>
			    <%= link_to current_user.usuario.humanize, edit_user_path(current_user) %>
			</li>
			<li>
			<%= link_to "Salir", session_path("current"), method: :delete %>
			</li>
		</ul>

			<% else %>
		</ul>
		<ul class="nav navbar-nav navbar-right">

				<li>
					<%= link_to 'Ingresar', new_session_path %> 
				</li>
		</ul>
			<% end %>
		</div>
	</nav>

  <div class="container"> <!--style="text-align: center"> -->
	  <% flash.each do |name, msg| %>
		  <% if msg.is_a?(String) %>
			  <div class="alert alert-<%= name == :notice ? "success" : "danger" %>">
				  <a class="close" data-dismiss="alert">&#215;</a>
				  <%= content_tag :div, msg, :id => "flash_#{name}" %>
			  </div>
		  <% end %>
	  <% end %>

		  <%= yield %>
  </div>




</body>
</html>
