<%= form_for(@etapa, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @etapa.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@etapa.errors.count, "error") %> prohibited this etapa from being saved:</h4>

      <ul>
      <% @etapa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :nombre, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :hh, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.number_field :hh, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_inicio, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.date_select :fecha_inicio, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_fin, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.date_select :fecha_fin, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :proyecto, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
	    <%= f.collection_select :proyecto_id, Proyecto.order(:nombre), :id,:nombre,{include_blank: true}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :modulo, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
	    <%= f.collection_select :modulo_id, Modulo.order(:nombre), :id,:nombre,{include_blank: true}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
