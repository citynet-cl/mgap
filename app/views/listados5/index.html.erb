<%= content_tag :h2, "Tareas segun Modulo" %>

<% @tareas_m.keys.sort.each do |modulo| %>
	<%= content_tag :h3, Modulo.find(modulo).nombre.humanize %>

	<div class="table-responsive">
		
	<table class="table table-striped table-hover">
		<thead>
	<tr>
	<th>Desarrollador</th>
	<th>Tarea</th>
            <th>Fecha Registro</th>
            <th>HH</th>
	    <th>Acciones</th>
    </tr>
	</thead>
	<tbody>
	<% @tareas_m[modulo].each do |tarea| %>
		<tr>
		            <td><%= tarea.user.usuario %></td>
		            <td><%= truncate(tarea.nombre, length: 20) %></td>
		            <td><%= tarea.fecha_registro %></td>
		            <td><%= tarea.hh %></td>
		            <td><%= detalles_link tarea %></td>
		            </tr>

	<% end  %>
	</tbody>
	</table>
	</div>
	<p>
        Descarga 
          <%= link_to "Excel", listados2_path(format: "xls") %>
        </p>
<% end  %>


