<%= simple_form_for(@user, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :usuario, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :usuario, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nombre, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :nombre, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :apellido, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :apellido, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.password_field :password, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.password_field :password_confirmation, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
  <div class="form-group">
	  <% if current_user.has_role? :admin %>

  <div class="form-group">
    <%= f.label "Puede acceder al sistema?", :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.check_box :activo, :class => "form-control" %>
    </div>
  </div>

					<%= f.label "Permisos", :class => "col-lg-2 control-label" %>
				<%  end %>
    <div class="col-lg-10">
    </div>
  </div>
		  <% for role in Role.find(:all) %>
				  <div class="col-lg-2 control-label">
				  </div>
    <div class="col-lg-10">
	  			<% if current_user.has_role? :admin %>
					  <%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role) %>
					  <%= role.name %>
				  <% else %>
						  <div class="hidden">
					  <%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role) %>
					  <%= role.name %>
						  	
						  </div>
				  <% end %>

				  </div>
			  <% end %>
	  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary", :value => "Guardar" %>
    </div>
  </div>
<% end %>
