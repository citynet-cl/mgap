<div class="page-header">
  <%= link_to new_user_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Usuario
  <% end %>
  <h3>Listado Usuarios</h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
            <th>Usuario</th>
            <th>Acciones</th>
            <th></th>
            <th></th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @users) do |user| %>
	      <td>
		      <%# #link_to user.usuario, edit_user_path(user) %>
		      <%= user.usuario %> 
	      </td>
	      <td>
		      <%= link_to "Editar", edit_user_path(user), class: "btn btn-primary btn-sm" %>
      		</td>
		<td>
			<% if user.activo? %>
				<%= link_to "Deshabilitar", estado_user_path(user), method: :put, class: "btn btn-success btn-sm" %>
			<% else %>
				<%= link_to "Habilitar", estado_user_path(user), method: :put, class: "btn btn-success btn-sm" %>
			<% end %>
      		</td>

	    <td><%= delete_link user_path(user) %></td>
      <% end %>
    </tbody>
  </table>
</div>
