<div class="page-header">
  <%= link_to clientes_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Volver
  <% end %>
  <%= link_to new_cliente_lugar_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Lugar
  <% end %>
  <%= content_tag :h4, "Listado Lugares" + " -> " + @cliente.nombre.humanize %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
        <th>Acciones</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @lugares) do |lugar| %>
            <td><%= lugar.nombre %></td>
	    <td><%= link_to 'Editar', edit_cliente_lugar_path(@cliente,lugar) , class: "btn btn-primary btn-sm" %></td>
	    <td><%= delete_link cliente_lugar_path(@cliente,lugar) %></td>
      <% end %>
    </tbody>
  </table>
</div>
