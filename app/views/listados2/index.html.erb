<%= javascript_include_tag params[:controller] %>
<%= content_tag :h2, "Tareas Mensuales " %>

<% @tareas_mes.keys.sort.reverse.each do |mes| %>
	<h3><%= mes.strftime("%B %Y") %></h3>

	<div class="table-responsive">
		
	<table class="table table-striped table-hover">
		<thead>
	<tr>
	<th>Desarrollador</th>
	<th>Tarea</th>
            <th>Fecha Registro</th>
            <th>Fecha Creacion</th>
            <th>HH</th>
            <th>Proyecto</th>
	    <th>Acciones</th>
    </tr>
	</thead>
	<tbody>
	<% @tareas_mes[mes].each do |tarea| %>
		<tr>
		            <td><%= tarea.user.usuario %></td>
			    <td><%= truncate(tarea.nombre, length: 20) %></td>
			    <td><%= tarea.fecha_registro.strftime("%d %B %Y") %></td>
			    <td><%= tarea.created_at.strftime("%d %B %Y") %></td>
		            <td><%= tarea.hh %></td>
                            <td><%= tarea.proyecto.nombre.humanize %></td>
		            <td><%= detalles_link tarea %></td>
		            </tr>

	<% end  %>
	</tbody>
	</table>
	</div>
	<p>
          <!--%= link_to "Excel", listados2_path(format: "xls") %-->
        </p>
<% end  %>

