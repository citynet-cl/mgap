<%= content_tag :h2, "Tareas Mensuale " %>

<% @tareas_mes.keys.sort.reverse.each do |mes| %>
	<h3><%= mes.strftime("%B %Y") %></h3>

	<div class="table-responsive">
		
	<table class="table table-striped table-hover">
		<thead>
	<tr>
	<th>Desarrollador</th>
	<th>Tarea</th>
            <th>Fecha Registro</th>
            <th>HH</th>
            <th>Proyecto</th>
            <th>Modulo</th>
            <th>Otro</th>
	    <th>Acciones</th>
    </tr>
	</thead>
	<tbody>
	<% @tareas_mes[mes].each do |tarea| %>
		<tr>
		            <td><%= tarea.user.usuario %></td>
		            <td><%= truncate(tarea.nombre, length: 20) %></td>
		            <td><%= tarea.fecha_registro %></td>
		            <td><%= tarea.hh %></td>
		              <% if tarea.proyecto.blank? and tarea.otro.blank? %>
			                      <td></td>
		                      <td><%= tarea.modulo.nombre.humanize %></td>
		                      <td></td>
		              <% elsif tarea.proyecto.blank? and tarea.modulo.blank? %>
			                              <td></td>
		                              <td></td>
		                              <td><%= tarea.otro.nombre.humanize %></td>
		              <% else %>
			                      <td><%= tarea.proyecto.nombre.humanize %></td>
		                      <td></td>
		                      <td></td>
		              <% end  %>
		            <td><%= detalles_link tarea %></td>
		            </tr>

	<% end  %>
	</tbody>
	</table>
	</div>
	<p>
        Descarga 
          <%= link_to "Excel", reportes_path(format: "xls") %>
        </p>
<% end  %>

