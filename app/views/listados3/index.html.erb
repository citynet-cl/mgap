<%= content_tag :h2, "Tareas segun Desarrollador" %>


<% @tareas_d.keys.sort.each do |desarrollador| %>
	<%= content_tag :h3, User.find(desarrollador).usuario.humanize %>
	 
	<div class="table-responsive">
		<table class="table table-striped table-hover">
		        <thead>
		        <tr>
		            <th>Tarea</th>
		            <th>Fecha Registro</th>
		            <th>HH</th>
		            <th>Proyecto</th>
		            <th>Acciones</th>
		        </tr>
		        </thead>
		        <tbody>
			<%  @tareas_d[desarrollador].each do |tarea| %>
				<tr>
					<td><%= truncate(tarea.nombre, length: 20) %></td>
					<td><%= tarea.fecha_registro %></td>
					<td><%= tarea.hh %></td>
					<td><%= tarea.proyecto.nombre.humanize %></td>
					<td><%= detalles_link tarea %></td>
				</tr>
			<% end  %>

        </tbody>
        </table>
        </div>
        <p>
          <!--%= link_to "Excel", listados3_path(format: "xls") %-->
        </p>
	<% end  %>

