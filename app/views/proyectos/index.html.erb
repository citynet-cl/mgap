<div class="page-header">
  <%= link_to new_proyecto_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Proyecto 
  <% end %>
  <h1>Listado Proyectos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
            <th>HH Planificadas</th>
            <th>HH Dedicadas</th>
	    <th>Acciones</th>
	    <th></th>
	    <th></th>
	    <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @proyectos) do |proyecto| %>
            <td><%= proyecto.nombre.humanize %></td>
	    <td><%= proyecto.hh %></td>
	    <td><%= proyecto.tareas.sum(:hh) %></td>
	    <td><%= link_to "Cerrar" ,{} , class: "btn btn-danger btn-sm " %></td>
	    <td><%= link_to "Editar", edit_proyecto_path(proyecto), class: "btn btn-primary btn-sm " %></td>
	    <td><%= detalles_link proyecto %></td>
	    <td><%= delete_link proyecto_path(proyecto) %></td>
      <% end %>
    </tbody>
  </table>
</div>
