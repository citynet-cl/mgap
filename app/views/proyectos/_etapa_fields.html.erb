<%= javascript_include_tag params[:controller] %>

<div class="nested-fields">
  <div class="form-group">
    <%= f.label "Nombre etapa", :class => "col-lg-2 control-label" %>
    <div class="col-lg-3">
      <%= f.text_field :nombre, :class => "form-control" %>
    </div>
    <%= f.label "HH etapa", :class => "col-lg-2 control-label" %>
    <div class="col-lg-3">
      <%= f.text_field :hh, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Fecha Inicio etapa", :class => "col-lg-2 control-label" %>
    <div class="col-lg-3">
	    <%= f.text_field :fecha_inicio, :class => "form-control dp-p" %>
    </div>
    <%= f.label "Fecha Fin etapa", :class => "col-lg-2 control-label" %>
    <div class="col-lg-3">
	    <%= f.text_field :fecha_fin, :class => "form-control dp-p" %>
    </div>
    <div class="col-lg-2">
	<%= link_to_remove_association "Borrar etapa", f, :class => "btn btn-sm btn-danger" %>
    </div>
  </div>
</div>
