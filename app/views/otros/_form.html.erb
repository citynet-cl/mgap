  <% end %>

  <div class="form-group">
	  <%= f.label :cliente, :class => "col-lg-2 control-label" %>
	  <div class="col-lg-10">
		  <%= f.collection_select :cliente_id, Cliente.order(:nombre), :id,:nombre,{include_blank: true}, class: "form-control" %>
