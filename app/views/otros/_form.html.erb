  <% if @otro.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@otro.errors.count, "error") %> prohibited this otro from being saved:</h4>

      <ul>
      <% @otro.errors.full_messages.each do |msg| %>
