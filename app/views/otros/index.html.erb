<div class="page-header">
  <%= link_to new_otro_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Otro
  <% end %>
  <h1>Listing otros</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
            <th>Cliente</th>
            <th>Nombre</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @otros) do |otro| %>
            <td><%= otro.cliente.nombre.humanize %></td>
            <td><%= otro.nombre.humanize %></td>
	    <td><%= link_to "Editar", edit_otro_path(otro), class: "btn btn-primary btn-sm " %></td>
	    <td><%= detalles_link otro %></td>
	    <td><%= delete_link otro_path(otro) %></td>
      <% end %>
    </tbody>
  </table>
</div>
