<div class="page-header">
  <%= link_to new_otro_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Otro
  <% end %>
  <h1>Listing otros</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @otros) do |otro| %>
            <td><%= otro.nombre %></td>
            <td><%= otro.descripcion %></td>
            <td><%= link_to 'Show', otro %></td>
        <td><%= link_to 'Edit', edit_otro_path(otro) %></td>
        <td><%= link_to 'Destroy', otro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
